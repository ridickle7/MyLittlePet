<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/selectable_prefbox"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="자랑 사진 올리기"
            android:textColor="@color/main_color"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <ImageButton
                android:id="@+id/boast_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="@mipmap/edit_card_photo"
                android:scaleType="fitXY"
                android:src="@mipmap/mypage_empty" />

            <EditText
                android:id="@+id/boast_comment"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_edittext"
                android:gravity="left"
                android:hint="간략한 코멘트를 입력하세요."
                android:textColor="#423730"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_dialog_button_set_bottom_round"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/dialog_layout_button_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@drawable/selectable_dialog_lbutton_bottom_round"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_reg_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="취소"
                    android:textColor="#423730"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dialog_layout_button_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@drawable/selectable_dialog_rbutton_bottom_round"
                android:clickable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_reg_OK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="확인"
                    android:textColor="#423730"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>