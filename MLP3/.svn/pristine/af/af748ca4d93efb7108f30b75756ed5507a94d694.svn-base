<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativelayout01"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/txt_qna_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="우리 뚱이가 너무 많이 먹어요ㅜㅜ"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_qna_content_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/txt_qna_content_nickname"
            android:layout_below="@+id/txt_qna_title"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_qna_content_nickname"
            android:text="8/23 13:58"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_qna_content_nickname"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_qna_title"
            android:layout_marginLeft="15dp"
            android:layout_weight="2"
            android:text="hy21116 | "
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_qna_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/relativelayout01"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="안녕하세요 3살짜리 불독을 키우고 있는 뚱이 엄마입니다. 다름이 아니라, 우리 뚱이가 강아지 치고 너무 많이 먹네요." />


    <RelativeLayout
        android:id="@+id/relativelayout02"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_qna_content">

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="댓글"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_comment"
            android:text="7"
            android:textColor="#F00"
            android:textStyle="bold" />

        <Button
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="댓글쓰기"
            android:textSize="12sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linear02"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/relativelayout02"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="4"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/txt_comment_nickname01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="teddy_s"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_comment_time01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="8/23 14:09" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="먹이지 마세요. 나중에 더 힘들어집니다." />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear03"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/linear02"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="4"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/txt_comment_nickname02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="hy21116"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_comment_time02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="8/23 14:23" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="어느 정도의 식단 조절과 함께 규칙적인 운동이 필요합니다." />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>