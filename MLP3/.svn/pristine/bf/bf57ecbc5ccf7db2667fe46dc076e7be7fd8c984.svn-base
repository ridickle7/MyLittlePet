        loginButton.registerCallback(callbackManager, new FacebookCallback<LoginResult>() {
            @Override
            public void onSuccess(LoginResult loginResult) {

/* 값 확인             info.setText(
                        "User ID: "
                                + loginResult.getAccessToken().getUserId()
