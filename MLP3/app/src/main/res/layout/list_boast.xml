<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/image_frame"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/btn_firstrankimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/boast_ex1"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/progressing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/progressing" />

        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="3dp"
            android:textSize="10dp"
            android:background="@drawable/shape"
            android:layout_gravity="right"
            android:text="기간 : 2015-08-30 ~ 2015-09-30"/>

        <TextView
            android:id="@+id/txt_mission"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="#EEEEEEEE"
            android:gravity="center"
            android:text="하얀강아지! 누가누가 이쁘나"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal|bottom" />
    </FrameLayout>


</RelativeLayout>