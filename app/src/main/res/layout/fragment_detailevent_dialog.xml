<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ridickle.co.kr.mylittlepet.detailEvent.fragmentDialog.DetailEventDialogFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dDialogIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white" />

        <EditText
            android:id="@+id/dDialogEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="문구 입력..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/dDialogFacebook"
                layout="@layout/item_detailevent_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
